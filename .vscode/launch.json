    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug ulak",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["develop"],
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "develop"],
            "program": "${workspaceFolder}/src/api/news/services/news.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}